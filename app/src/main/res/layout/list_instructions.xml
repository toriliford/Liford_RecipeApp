<?xml version="1.0" encoding="utf-8"?><!DOCTYPE androidx.cardview.widget.CardView [<!ELEMENT androidx.cardview.widget.CardView (LinearLayout)*><!ATTLIST androidx.cardview.widget.CardViewxmlns:android CDATA #REQUIREDandroid:layout_width CDATA #REQUIREDandroid:layout_height CDATA #REQUIREDxmlns:app CDATA #REQUIREDapp:cardBackgroundColor CDATA #REQUIREDapp:cardElevation CDATA #REQUIREDandroid:layout_margin CDATA #REQUIRED><!ELEMENT LinearLayout (TextView)*><!ATTLIST LinearLayoutandroid:layout_width CDATA #REQUIREDandroid:layout_height CDATA #REQUIREDandroid:orientation CDATA #REQUIRED><!ELEMENT TextView (#PCDATA)><!ATTLIST TextViewandroid:id CDATA #REQUIREDandroid:layout_width CDATA #REQUIREDandroid:layout_height CDATA #REQUIRED>]>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instructionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instruction Name"
            android:textColor="@color/pine_green"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerInstructionSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>